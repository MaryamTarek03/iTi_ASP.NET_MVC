@{
    ViewData["Title"] = "Departments";
}
@model List<Department>

<div>
    <center>
        <h1>Our Departments</h1>
    </center>
</div>
<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Manager</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row"><a class="row-button" href="/Department/GetById/@item.Id">@item.Id</a></th>
                <td>@item.Name</td>
                <td>@item.Manager?.FirstName @item.Manager?.MINIT. @item.Manager?.LastName</td>
            </tr>
        }
    </tbody>
</table>