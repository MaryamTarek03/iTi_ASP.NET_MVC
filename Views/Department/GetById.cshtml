@{
}
@model Department
<center>
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <h6 class="card-subtitle">@Model.Id</h6>
            <p class="card-text"></p>
            <p class="card-text">
                @Model.Manager?.FirstName @Model.Manager?.MINIT. @Model.Manager?.LastName
            </p>
            <p class="card-text">Manager Start Date: @Model.ManagerStartDate</p>
            <a href="/Department/GetAll" class="card-link">Go back</a>
        </div>
    </div>
    <div>
        <a asp-controller="@ControllerNames.Department" asp-action="@ActionNames.EditForm" asp-route-id="@Model.Id">Edit</a>
        <a asp-controller="@ControllerNames.Department" asp-action="@ActionNames.DeleteData" asp-route-id="@Model.Id">Delete</a>
    </div>
</center>